<UserControl x:Class="LoL_URF_HybridStats_vs12.UI_Controls.BarChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:charts ="clr-namespace:LoL_URF_HybridStats_vs12.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="600">
    <Grid>
        <charts:BarChart Grid.Column="1" x:Name="mainChart"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        TextColor="White" ShowHorizontalGridLine="True" EnableZooming ="False" Visibility="Visible"/>
    </Grid>
</UserControl>
